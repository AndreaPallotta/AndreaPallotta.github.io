{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "bracketSameLine": false,
    "endOfLine": "lf",
    "plugins": ["prettier-plugin-tailwindcss", "@ianvs/prettier-plugin-sort-imports"],
    "importOrder": [
        "^react$",
        "^@react",
        "<THIRD_PARTY_MODULES>",
        "^@/components/(.*)$",
        "^@/hooks/(.*)$",
        "^@/world/(.*)$",
        "^@/pages/(.*)$",
        "^[./]"
    ],
    "importOrderParserPlugins": ["typescript", "jsx"],
    "importOrderCaseSensitive": false
}
